<!doctype html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Gelişmiş Quiz Platformu</title>
   <script>
  const correctPassword = "emrah123"; // Şifreni buraya yaz
  const userInput = prompt("Şifreyi giriniz:");
  if (userInput !== correctPassword) {
    document.write("<h1 style='color:red;text-align:center;'>🚫 Yetkisiz erişim! 🚫</h1>");
    throw new Error("Yanlış şifre girildi!");
  }
</script>yıl
 <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <div class="app-header">
      <h1 class="app-title">🎯 Quiz Master</h1>
      <p class="app-subtitle">Gelişmiş Quiz Platformu</p>
    </div>

    <div class="wrap">
      <div class="main-grid">
        <!-- Quiz Content -->
        <div class="quiz-content">
          <div class="topbar">
            <span id="qcounter" class="chip">📋 Soru 1 / 3</span>
            <span
              id="categoryDisplay"
              class="category-badge"
              style="display: none"
              >📚 Kategori</span
            >
            <span
              id="difficultyDisplay"
              class="difficulty-badge difficulty-easy"
              style="display: none"
              >⭐ Kolay</span
            >
            <span
              id="achievementDisplay"
              class="achievement-badge"
              style="display: none"
              >🏆 Başarı!</span
            >
            <span id="score" class="score">💯 Skor: 0</span>
            <span id="timer" class="timer">⏱️ 00:00</span>
          </div>

          <div class="progress">
            <div id="bar" class="bar"></div>
          </div>

          <div class="card">
            <h2 id="question" class="qtext">Soru yükleniyor…</h2>
            <div id="choices" class="choices"></div>

            <div class="meta-row">
              <span id="maddeBadge" class="madde-badge" style="display: none"
                >📜 Madde</span
              >
              <button id="markBtn" class="btn ghost">🔖 İşaretle</button>
              <button id="showMarkedBtn" class="btn secondary">
                📌 İşaretliler
              </button>
              <button id="favBtn" class="btn ghost">⭐ Favori</button>
            </div>

            <div class="note-area">
              <label class="form-label">📝 Açıklama/Not:</label>
              <textarea
                id="noteBox"
                rows="3"
                placeholder="Bu soru hakkında notlarınızı yazın..."
              ></textarea>
            </div>
          </div>

          <div class="nav">
            <div class="split">
              <button id="prev" class="btn">⬅️ Önceki</button>
              <button id="reset" class="btn secondary">🔄 Sıfırla</button>
              <button id="next" class="btn">Sonraki ➡️</button>
            </div>
          </div>

          <div id="pager" class="pager"></div>

          <!-- Stats Panel -->
          <div class="stats-wrap">
            <div id="statsPanel" class="stats-panel"></div>
          </div>

          <!-- End Screen -->
          <div id="endScreen" class="end-screen">
            <h2>🎉 Quiz Tamamlandı!</h2>
            <p id="resultText">Sonuçlarınız burada görünecek</p>
            <div
              style="
                margin-top: 1.5rem;
                display: flex;
                gap: 1rem;
                justify-content: center;
                flex-wrap: wrap;
              "
            >
              <button id="exportCsvBtn" class="btn ghost">📊 CSV İndir</button>
              <button id="exportPdfBtn" class="btn ghost">📄 PDF İndir</button>
              <button id="restartBtn" class="btn success">
                🔄 Yeniden Başla
              </button>
            </div>
          </div>
        </div>

        <!-- Control Panel -->
        <div class="control-panel">
          <div class="control-section">
            <h3 class="control-title">🎮 Quiz Kontrolleri</h3>
            <div class="form-group">
              <label class="form-label">📋 Quiz Modu:</label>
              <select id="mode" class="select">
                <option value="normal">📚 Sıralı Test</option>
                <option value="random">🎲 Rastgele Test</option>
                <option value="hard">💪 Zor Sorular</option>
                <option value="countdown">⏰ Zamana Karşı</option>
              </select>
            </div>

            <div class="form-group">
              <label class="form-label">🔍 Soru Ara:</label>
              <input
                id="search"
                class="input"
                type="text"
                placeholder="Anahtar kelime girin..."
              />
            </div>

            <div class="form-group">
              <label class="form-label">📂 Kategori:</label>
              <select id="categoryFilter" class="select">
                <option value="">🌐 Tüm Kategoriler</option>
              </select>
            </div>

            <div class="form-group">
              <label class="form-label">⭐ Zorluk:</label>
              <select id="difficultyFilter" class="select">
                <option value="">🎯 Tüm Seviyeler</option>
                <option value="easy">🟢 Kolay</option>
                <option value="medium">🟡 Orta</option>
                <option value="hard">🔴 Zor</option>
              </select>
            </div>
          </div>

          <div class="control-section">
            <h3 class="control-title">🚀 Hızlı Erişim</h3>
            <div class="form-group">
              <label class="form-label"># Soruya Git:</label>
              <div style="display: flex; gap: 0.5rem">
                <input
                  id="jumpTo"
                  class="input"
                  type="number"
                  min="1"
                  placeholder="Soru #"
                  style="flex: 1"
                />
                <button id="jumpBtn" class="btn ghost">Git</button>
              </div>
            </div>

            <div class="form-group">
              <select id="jumpSelect" class="select"></select>
            </div>

            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap">
              <button id="jump600" class="btn ghost">600</button>
              <button id="favToggle" class="btn secondary">⭐ Favoriler</button>
            </div>
          </div>

          <div class="control-section">
            <h3 class="control-title">⚙️ Ayarlar</h3>
            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap">
              <button id="theme" class="btn ghost">🌗 Tema</button>
              <button id="statsToggle" class="btn secondary">
                📊 İstatistik
              </button>
              <button id="adminToggle" class="btn ghost">⚙️ Yönetim</button>
            </div>

            <div
              style="
                margin-top: 1rem;
                display: flex;
                gap: 0.5rem;
                flex-wrap: wrap;
              "
            >
              <button id="timerStart" class="btn ghost">⏯️ Krono</button>
              <button id="timerReset" class="btn ghost">⏹️ Sıfırla</button>
            </div>

            <div style="margin-top: 1rem">
              <button id="loadJsonBtn" class="btn success" style="width: 100%">
                📥 JSON Yükle
              </button>
              <input id="jsonFile" type="file" accept=".json" />
            </div>
          </div>
        </div>
      </div>

      <!-- Admin Panel -->
      <div id="adminPanel" class="admin-panel">
        <h2 style="margin-top: 0; color: var(--primary)">⚙️ Yönetim Paneli</h2>

        <div class="form-group">
          <label class="form-label">❓ Soru Metni:</label>
          <textarea
            id="adminQuestion"
            class="form-input"
            rows="3"
            placeholder="Sorunuzu buraya yazın..."
          ></textarea>
        </div>

        <div class="form-group">
          <label class="form-label">📋 Seçenekler:</label>
          <div id="adminOptions">
            <div class="option-input">
              <input
                type="text"
                class="form-input"
                placeholder="A) Seçenek 1"
                data-option="0"
              />
              <button class="btn danger" onclick="removeOption(this)">
                ❌
              </button>
            </div>
            <div class="option-input">
              <input
                type="text"
                class="form-input"
                placeholder="B) Seçenek 2"
                data-option="1"
              />
              <button class="btn danger" onclick="removeOption(this)">
                ❌
              </button>
            </div>
          </div>
          <button id="addOption" class="btn ghost">➕ Seçenek Ekle</button>
        </div>

        <div
          style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 1rem"
        >
          <div class="form-group">
            <label class="form-label">✅ Doğru Cevap:</label>
            <select id="adminAnswer" class="form-input">
              <option value="0">A Seçeneği</option>
              <option value="1">B Seçeneği</option>
            </select>
          </div>

          <div class="form-group">
            <label class="form-label">📂 Kategori:</label>
            <input id="adminCategory" class="form-input" placeholder="Genel" />
          </div>

          <div class="form-group">
            <label class="form-label">⭐ Zorluk:</label>
            <select id="adminDifficulty" class="form-input">
              <option value="easy">🟢 Kolay</option>
              <option value="medium">🟡 Orta</option>
              <option value="hard">🔴 Zor</option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <label class="form-label">📜 Madde No (opsiyonel):</label>
          <input
            id="adminMadde"
            class="form-input"
            type="number"
            placeholder="Madde numarası"
          />
        </div>

        <div style="display: flex; gap: 1rem; flex-wrap: wrap">
          <button id="addQuestion" class="btn success">➕ Soru Ekle</button>
          <button id="editQuestion" class="btn" style="display: none">
            ✏️ Güncelle
          </button>
          <button id="deleteQuestion" class="btn danger">🗑️ Sil</button>
          <button id="exportJson" class="btn ghost">📤 JSON Export</button>
          <button id="clearAll" class="btn danger">🧹 Hepsini Sil</button>
        </div>
      </div>
    </div>

    <!-- Modal for confirmations -->
    <div id="modal" class="modal">
      <div class="modal-content">
        <h3 id="modalTitle">Onay</h3>
        <p id="modalText">İşlemi onaylıyor musunuz?</p>
        <div
          style="
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 1.5rem;
          "
        >
          <button id="modalConfirm" class="btn success">✅ Evet</button>
          <button id="modalCancel" class="btn secondary">❌ Hayır</button>
        </div>
      </div>
    </div>

    <!-- Toast notifications -->
    <div id="toast" class="toast"></div>

    <script src="script.js"></script>
    <script src="admin.js"></script>
  </body>
</html>
